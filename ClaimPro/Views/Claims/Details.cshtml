@model ClaimPro.Models.Claim

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Claim</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoursWorked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoursWorked)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HourlyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HourlyRate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmittedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmittedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocumentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocumentType)
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
        <dt class="col-sm-2">
            Uploaded File Name
        </dt>
        <dd class="col-sm-10">
            @{
                var fileName = !string.IsNullOrEmpty(Model.OriginalFileName) ? Model.OriginalFileName : "No file uploaded";
            }
            @fileName
        </dd>
        <dt class="col-sm-2">
            Comments
        </dt>
        <dd class="col-sm-10">
            @(!string.IsNullOrEmpty(Model.Comments) ? Model.Comments : "No comments")
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ClaimId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
